{
  "name": "movie-be",
  "version": "1.0.0",
  "description": "Enterprise-grade NestJS backend for movie platform",
  "private": true,
  "scripts": {
    "preinstall": "node scripts/enforce-pnpm.js",
    "format": "prettier --write \"{src,tests,scripts}/**/*.{ts,js,json,md,yml,yaml}\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --max-warnings=0",
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "pnpm exec nest start --watch",
    "start:prod": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --config jest.unit.config.ts --runInBand",
    "migrate": "pnpm typeorm migration:run -d dist/src/core/config/typeorm.config.js",
    "migration:generate": "pnpm typeorm migration:generate src/db/migrations/${npm_config_name} -d src/core/config/typeorm.config.ts",
    "seed": "ts-node -r tsconfig-paths/register src/modules/seeding/seed.ts",
    "docs": "pnpm nest build && pnpm swagger:generate",
    "swagger:generate": "node scripts/generate-swagger.js",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*{.ts,.tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*{.js,.json,.md,.yml,.yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.927.0",
    "@aws-sdk/s3-request-presigner": "^3.927.0",
    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.9",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.4.2",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.4.2",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^10.4.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.2",
    "@nestjs/platform-fastify": "^10.4.2",
    "@nestjs/platform-socket.io": "^10.4.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.1.4",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^10.0.1",
    "@opentelemetry/api": "1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.43.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.43.0",
    "@opentelemetry/sdk-node": "^0.43.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "lodash": "^4.17.21",
    "multer": "^2.0.2",
    "nest-winston": "^1.9.0",
    "nestjs-pino": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.2.1",
    "@nestjs/testing": "^10.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.30",
    "@types/passport-jwt": "^3.0.10",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}